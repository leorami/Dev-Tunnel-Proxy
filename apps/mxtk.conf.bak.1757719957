location = /mxtk {
  proxy_http_version 1.1;
  proxy_set_header Host $host;
  proxy_set_header X-Forwarded-Proto https;
  proxy_set_header X-Forwarded-Host $host;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  add_header Content-Security-Policy "upgrade-insecure-requests" always;
  proxy_set_header Accept-Encoding "";
  sub_filter_types text/html;
  sub_filter_once off;
  sub_filter "http://ramileo.ngrok.app/_next/" "https://ramileo.ngrok.app/_next/";
  sub_filter "http://ramileo.ngrok.app/_next" "https://ramileo.ngrok.app/_next";
  sub_filter "//ramileo.ngrok.app/_next/" "https://ramileo.ngrok.app/_next/";
  resolver 127.0.0.11 ipv6=off;
  resolver_timeout 5s;
  set $mxtk_site_dev_mxtk mxtk-site-dev:2000;
  proxy_pass http://$mxtk_site_dev_mxtk/;
}

