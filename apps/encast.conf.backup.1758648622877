# Story index JSONs (serve as JSON to avoid SPA fallback)
location = /sdk/sb-index.json {
  proxy_set_header Host encast-sdk:6006;
  rewrite ^/sdk/sb-index\.json$ /sb-index.json break;
  set $up_encast_sdk_6006_7 http://encast-sdk:6006;
  proxy_pass $up_encast_sdk_6006_7;
  proxy_hide_header Content-Type;
  add_header Content-Type application/json;
}
location = /sdk/index.json {
  proxy_set_header Host encast-sdk:6006;
  rewrite ^/sdk/index\.json$ /index.json break;
  set $up_encast_sdk_6006_8 http://encast-sdk:6006;
  proxy_pass $up_encast_sdk_6006_8;
  proxy_hide_header Content-Type;
  add_header Content-Type application/json;
}

