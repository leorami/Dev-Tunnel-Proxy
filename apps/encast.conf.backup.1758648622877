# Vite env shim and sb-vite deps under /sdk
location = /sdk/node_modules/vite/dist/client/env.mjs {
  proxy_http_version 1.1;
  proxy_set_header Accept "application/javascript, text/javascript, */*;q=0.1";
  proxy_set_header Accept-Encoding "";
  proxy_set_header Host encast-sdk:6006;
  proxy_set_header X-Forwarded-Host $host;
  proxy_set_header X-Forwarded-Prefix /sdk;
  resolver 127.0.0.11 ipv6=off;
  resolver_timeout 5s;
  rewrite ^/sdk/node_modules/vite/dist/client/env\.mjs$ /@id/vite/dist/client/env.mjs break;
  set $up_encast_sdk_6006_17 http://encast-sdk:6006;
  proxy_pass $up_encast_sdk_6006_17;
}
location ~ ^/sdk/node_modules/\.cache/storybook/[^/]+/sb-vite/deps/(.*)$ {
  proxy_http_version 1.1;
  proxy_set_header Accept "application/javascript, text/javascript, */*;q=0.1";
  proxy_set_header Accept-Encoding "";
  proxy_set_header Host encast-sdk:6006;
  proxy_set_header X-Forwarded-Host $host;
  proxy_set_header X-Forwarded-Prefix /sdk;
  resolver 127.0.0.11 ipv6=off;
  resolver_timeout 5s;
  rewrite ^/sdk/node_modules/\.cache/storybook/[^/]+/sb-vite/deps/(.*)$ /@id/$1 break;
  set $up_encast_sdk_6006_18 http://encast-sdk:6006;
  proxy_pass $up_encast_sdk_6006_18;
}

